<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>ConnectServlet</servlet-name>
        <servlet-class>pahakia.samples.gplus.servlet.ConnectServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConnectServlet</servlet-name>
        <url-pattern>/connect</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisconnectServlet</servlet-name>
        <servlet-class>pahakia.samples.gplus.servlet.DisconnectServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>DisconnectServlet</servlet-name>
        <url-pattern>/disconnect</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>pahakia.samples.gplus.servlet.MainServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PeopleServlet</servlet-name>
        <servlet-class>pahakia.samples.gplus.servlet.PeopleServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>PeopleServlet</servlet-name>
        <url-pattern>/people</url-pattern>
    </servlet-mapping>

</web-app>
